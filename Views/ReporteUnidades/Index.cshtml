@model IEnumerable<Serfitex.Models.ReporteUnidades>

@{
    ViewData["Title"] = "Reporte Unidades";
}
<div id="kt_app_content" class="app-content  flex-column-fluid">
    <div id="kt_app_content_container" class="app-container  container-xxl">
        <div class="row g-5 g-xl-8">
            <div class="col-xl-6">
                <div class="card card-xl-stretch mb-xl-8">
                    <div class="card-header border-0">
                        <h3 class="card-title align-items-start flex-column">
                            <span class="card-label fw-bold fs-3 mb-1">Reporte Unidades</span>
                            <span class="text-muted fw-semibold fs-7">Por Fecha</span>
                        </h3>
                    </div>

                    <div class="card-body py-3">
                        <div class="">

                            @using (Html.BeginForm("DescargarReporte", "ReporteUnidades", FormMethod.Post))
                            {
                                <label class="form-label">Fecha Inicio</label>
                                <input type="date" class="form-control" name="fechaInicio" />
                                <label class="form-label">Fecha Fin</label>
                                <input type="date" class="form-control" name="fechaFin" />
                                <br />
                                <input type="submit" class="btn btn-primary" style="width:100%" value="Descargar" />
                            }

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>