@model Serfitex.Models.Ta_gastos

@{
    ViewData["Title"] = "Registrar Gasto";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="GuardarGasto" method="post">
            <input type="hidden" asp-for="Id_unidad" value="@Model.Id_unidad" />
            <div class="form-group">
                <label asp-for="Gastos" class="control-label"></label>
                <input asp-for="Gastos" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Gastos" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Concepto" class="control-label"></label>
                <input asp-for="Concepto" class="form-control" autocomplete="off" />
                <span asp-validation-for="Concepto" class="text-danger"></span>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Guardar Pago</button>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>
