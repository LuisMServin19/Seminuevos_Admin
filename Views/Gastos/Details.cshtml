@model IEnumerable<Serfitex.Models.Ta_gastos>

@{
    ViewData["Title"] = "Detalles de Gastos";
    var fiperfil = ViewContext.HttpContext.Session.GetString("fiperfil");
}

<h1>Gastos de @ViewBag.Modelo</h1>

<div class="container">
    <div class="row">
        <div class="col-md-8"> <!-- Ajustamos el tamaño de la columna para la tabla -->
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Concepto)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Gasto)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Fecha_gasto)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Concepto)</td>
                            <td>$ @String.Format("{0:N}", item.Gasto)</td> <!-- Formateo para pesos -->
                            <td>@String.Format("{0:dd/MM/yyyy}", item.Fecha_gasto)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <div class="col-md-4"> <!-- Columna para la imagen -->
            <div>
                @if (Model.Any())
                {
                    var firstItem = Model.First();
                    if (!string.IsNullOrEmpty(firstItem.ImagePath))
                    {
                        <img src="@Url.Content(firstItem.ImagePath)" class="img-fluid" alt="Imagen del gasto" />
                    }
                    else
                    {
                        <p>No hay imagen disponible</p>
                    }
                }
            </div>
        </div>
    </div>
</div>

<br />
<div>
    @if (fiperfil == "1")
    {
        <a asp-action="Gasto" asp-route-id="@Model.First().Id_unidad" class="btn btn-primary">Agregar gasto</a>
    }
    | <a asp-action="Index">Regresar a la lista</a>
</div>
