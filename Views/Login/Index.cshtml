@model Serfitex.Models.Login

@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Login";
}

<div class="tyn-root">
    <div class="tyn-content tyn-auth tyn-auth-centered">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-4 col-lg-5 col-md-7 col-sm-9">
                    <div class="my-3 text-center">
                        SEMINUEVOS PREMIUM
                    </div>
                    <div class="card border-0">
                        <div class="p-4">
                            <h3 style="display: flex; justify-content: center;">
                                <img src="~/images/Seminuevos.png" alt="Icono de Login" style="width: 200px; height: 200px; margin-right: 10px;">
                            </h3>
                            <div class="row g-3">
                                <form asp-action="Index">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label class="form-label" for="username">Usuario</label>
                                            <div class="form-control-wrap">
                                                <input autocomplete="off" asp-for="username" type="text" class="form-control" placeholder="Usuario">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label class="form-label d-flex" for="contrasena">Contraseña</label>
                                            <div class="form-control-wrap">
                                                <input autocomplete="off" asp-for="Contrasena" type="password" class="form-control" placeholder="********">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <br />
                                        <input type="submit" value="Entrar" class="btn btn-primary w-100" />
                                    </div>
                                </form>
                            </div><!-- .row -->
                        </div>
                    </div><!-- .card -->
                </div><!-- .col -->
            </div><!-- .row -->
        </div><!-- .container -->
    </div>
</div>
<script src="./assets/js/bundle.js?v131"></script>
<script src="./assets/js/app.js?v131"></script>