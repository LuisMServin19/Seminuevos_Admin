@model List<Serfitex.Models.Unidades>

@{
    ViewData["Title"] = "Detalles";
    var fiperfil = ViewContext.HttpContext.Session.GetString("fiperfil");
}

<h1>Detalles de gastos</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Fecha del Gasto</th>
                        <th>Concepto</th>
                        <th>Monto del Gasto</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@String.Format("{0:dd/MM/yyyy}", item.Fecha_gasto)</td>
                            <td>@item.Concepto</td>
                            <td>$ @item.Gasto.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="col-md-6 col-sm-12">
            <div>
                <img src="@Url.Content(ViewBag.ImagePath)" class="img-fluid" />
            </div>
        </div>
    </div>
</div>

<br />
<div>
    @if (fiperfil == "1")
    {
        <a asp-action="Venta" asp-route-id="@Model.FirstOrDefault()?.Id_unidad">Registrar gasto</a>
    }
    | <a asp-action="Index">Regresar a la lista</a>
</div>
