@model Serfitex.Models.Unidades

@{
    ViewData["Title"] = "Detalles";
    var fiperfil = ViewContext.HttpContext.Session.GetString("fiperfil");
}

<h1>Detalle de @Model.Modelo</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <table class="table table-bordered table-striped">
                <tbody>
                   <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.Fecha_gasto)</strong></td>
                        <td>@String.Format("{0:dd/MM/yyyy}", Model.Fecha_gasto)</td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.Concepto)</strong></td>
                        <td>$ @Html.DisplayFor(model => model.Concepto, "{0:C}")</td>
                    </tr>
                     <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.Gasto)</strong></td>
                        <td>@Html.DisplayFor(model => model.Gasto)</td>
                    </tr>
                    
                </tbody>
            </table>
        </div>

        <div class="col-md-6 col-sm-12">
            <div>
                <img src="@Url.Content(ViewBag.ImagePath)" class="img-fluid" />
            </div>
        </div>
    </div>
</div>

<br />
<div>
    @if (fiperfil == "1")
    {
        <a asp-action="Venta" asp-route-id="@Model?.Id_unidad">Registrar gasto</a>
    }
    | <a asp-action="Index">Regresar a la lista</a>
</div>
