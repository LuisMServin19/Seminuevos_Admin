@model IEnumerable<WebApp.Models.login_user>

@{
    ViewData["Title"] = "Index";
    var fiperfil = ViewContext.HttpContext.Session.GetString("fiperfil");
}

<h1>Usuarios</h1>

@if (fiperfil == "1")
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Agregar Usuario</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().usr_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().tipo_perfil) <!-- Asegúrate de que esta propiedad exista -->
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.usr_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tipo_perfil) <!-- Asegúrate de que esta propiedad exista -->
                </td>
                <td>
                    @if (fiperfil == "1")
                    {
                        <a asp-action="Edit" asp-route-ID_USR="@item.ID_USR" class="btn btn-primary">Editar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
